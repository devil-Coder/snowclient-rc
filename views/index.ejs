<!DOCTYPE html>
<html ng-app="ims" ng-controller="mainCtrl">
  <head>
    <base href="/">
    <title>Learning Servicenow Api</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Bootstrap 4.0.0 -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <!-- Font Awesome 4.7 -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" >

    <!--AngularJS 1.6.4 -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular-route.min.js"></script>
    <script type="text/javascript" src="/javascripts/controllers/index.js"></script>
  </head>
  <body ng-cloak>
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12 bg-primary text-white padded">
        <h1>Incident Management System</h1>
      </div>
      <div class="col-lg-12">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
              <a class="nav-item nav-link active" href="#!/incidents/add">Add new Incident</a>
              <a class="nav-item nav-link active" href="#!/incidents/all">View All Incidents</a>
              <a class="nav-item nav-link active" href="/logout">Logout</a>
            </div>
          </div>
        </nav>
        <div class="message-container" ng-if="response">
          <div class="alert alert-success" role="alert" ng-if="!message.error">
            <b>{{response.message}}</b>
          </div>
          <div class="alert alert-danger" role="alert" ng-if="message.error">
            <b>{{response.message}}</b>
          </div>
        </div>
        <div ng-view></div>
      </div>
    </div>
  </div>
  </body>
</html>
