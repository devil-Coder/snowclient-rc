<div ng-init="getAllIncidents()">
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Short Description</th>
            <th scope="col">Asigned to</th>
            <th scope="col">Assignment Group</th>
            <th scope="col">Priority</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <tr ng-repeat="incident in incidents">
            <th scope="row">{{$index-1}}</th>
            <td>{{incident.short_description}}</td>
            <td>{{incident.assigned_to}}</td>
            <td>{{incident.assignment_group}}</td>
            <td>{{incident.priority}}</td>
            <td>
                <a href="#!/incident/{{incident.number}}">
                    <button class="btn btn-primary">View Detail</button>
                </a>
            </td>
        </tr>
        </tbody>
    </table>
</div>